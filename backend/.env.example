# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/your_database_name

# JWT secret (used for signing tokens)
JWTPRIVATEKEY=replace_this_with_a_long_random_secret

# Base URL used in verification emails (include protocol)
BASE_URL=http://localhost:8000

# Email (SMTP) credentials for nodemailer (if used)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=you@example.com
EMAIL_PASS=your-email-password

# Cloudinary (optional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Other settings
PORT=8000

# NOTE: Do NOT commit your real .env file with secrets to version control.
